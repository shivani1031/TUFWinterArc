42. Trapping Rain Water


class Solution {
public:
    int trap(vector<int>& height) {
        int n = height.size();
        vector<int> maxl(n, 0);
        vector<int> maxr(n, 0);
        int i = 0,j = n-1;
        int ansl = 0;
        int ansr = 0;
  
        while(i<n && j>0)
        {
            ansl = max(ansl, height[j]);
            ansr= max(ansr, height[i]);
            maxl[j] = ansl;
            maxr[i] = ansr;
            i++;
            j--;
        }
        int x;
        int y;
        int sum =0;
for(int i = 0;i<n;i++)
{
    x = min(maxl[i], maxr[i]);
y= x-height[i];
if(y>0)
{
    sum += y;
}
}
return sum;
    }
};
