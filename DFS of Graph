DFS of Graph



class Solution {
  public:
  
  vector<int> helper(vector<int> &visited, int u,
                     vector<vector<int>>& adj,
                     vector<int> &ans)   // pass by reference
  {
     if(visited[u] == 1) return ans;
     
     visited[u] = 1;          // assignment, not comparison
     ans.push_back(u);
     
     for(int &v : adj[u])
     {
         if(!visited[v])
             helper(visited, v, adj, ans);   // call helper, not dfs
     }
     return ans;
  }
  
  vector<int> dfs(vector<vector<int>>& adj) {
        vector<int> ans;
        int n = adj.size();
        vector<int> visited(n, 0);
        helper(visited, 0, adj, ans);
        return ans;
    }
};
