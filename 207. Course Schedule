207. Course Schedule


class Solution {
public:
    bool canFinish(int numCourses, vector<vector<int>>& pre) {
        vector<vector<int>> adj(numCourses);
        vector<int> indegree(numCourses, 0);
        for(auto &node: pre)
        {
            int willdo = node[0];
            int preq = node[1];

            adj[preq].push_back(willdo);
            indegree[willdo]++;
        }

        queue<int> q;
        for(int i =0;i<numCourses;i++)
        {
            if(indegree[i]==0)
            q.push(i);
        }
        int cnt =0;
        while(!q.empty())
        {
            int x = q.front();
            q.pop();
            cnt++;
            for(auto &con : adj[x])
            {
                indegree[con]--;
                if(indegree[con]==0) {
                    q.push(con);
                }
            }
        }
return cnt == numCourses;
    }
};
