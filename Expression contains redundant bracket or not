Expression contains redundant bracket or not


class Solution {
  public:
    bool checkRedundancy(string &s) {
        // code here
        stack<char> st;                 // CHANGED: int â†’ char
        int n = s.size();
        int i = 0;

        while (i < n) {
            if (s[i] == '(') {
                st.push(s[i]);          // SAME
            }
            else if ( (s[i] >= 'a' && s[i] <= 'z') ||   // CHANGED: parentheses
                      s[i] == '+' || s[i] == '-' ||
                      s[i] == '*' || s[i] == '/' ) {
                st.push(s[i]);          // CHANGED: push symbols, not count
            }
            else if (s[i] == ')') {
                bool hasOperator = false;   // CHANGED: replace cnt logic

                while (!st.empty() && st.top() != '(') {   // CHANGED
                    char top = st.top();
                    st.pop();
                    if (top == '+' || top == '-' ||
                        top == '*' || top == '/') {
                        hasOperator = true;
                    }
                }

                if (!st.empty())
                    st.pop();           // CHANGED: remove '('  

                if (!hasOperator)
                    return true;        // CHANGED: redundancy condition  //inner loop
            }
            i++;
        }
        return false;
    }
};
